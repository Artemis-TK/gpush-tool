#!/bin/bash

set -e

printf "Preparando o ambiente"
sleep 1s
printf "."
sleep 1s
printf "."
sleep 1s
printf ".\n"

cd || exit

if [ ! -f ~/.bashrc ]; then
    touch ~/.bashrc
fi

if [ ! -f ~/.bash_profile ]; then
    cat << EOF > ~/.bash_profile
#!/bin/bash

if [ -f ~/.bashrc ]; then
    source ~/.bashrc
fi
EOF
fi

if [[ ":$PATH:" != *":$HOME/gpush-tool/bin:"* ]]; then
    export PATH="$PATH:$HOME/gpush-tool/bin"
    echo "Diret√≥rio adicionado ao PATH: ~/gpush-tool/bin"
fi

printf "Tudo pronto.\n"
